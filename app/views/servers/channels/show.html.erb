<% content_for :title, "Showing channel" %>

<%= turbo_frame_tag :dashboard do %>
  <%= turbo_stream_from @server_channel %>
  <div class="flex">
    <%= render "servers/sidebar" %>
    <div class="w-full h-screen bg-indigo-500 flex flex-col">
      <h1 class="text-2xl text-gray-100 text-center pt-5"> <%= @server_channel.name %> </h1>

      <div class="h-[80vh] w-full flex flex-col px-4 pt-4 gap-4 overflow-y-scroll" id="messages">
        <% @server_channel.messages.order(created_at: :asc).each do |message| %>
          <%= render "message", message: message %>
        <% end %>
      </div>
      <div class="h-40 w-full">
        <%= form_with url: server_channel_messages_path(@server, @server_channel), model: @server_channel.messages.new  do |f| %>
          <div class="flex relative p-4">
            <%= f.text_area :body, class:"w-full rounded-lg bg-gray-700 text-gray-100", style: "resize:none" %>
            <%= button_tag type: "submit", class:"absolute top-7 right-6 cursor-pointer p-2 bg-gray-500 hover:bg-indigo-500 hover:scale-105 rounded-full" do%>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 text-gray-100">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>