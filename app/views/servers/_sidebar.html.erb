<div class="w-60 min-h-screen bg-gray-600 flex flex-col p-4 fixed left-50 z-[555]" data-sidebar-target="sidebar"> 
    <% if current_user == @server.owner %>
        <div class="flex justify-end w-full">
            <%= link_to "Create Channel", new_server_channel_path(@server), class:"text-lg text-gray-100 px-3 py-2 rounded-lg bg-blue-800",
                data: { turbo_frame: :dashboard}%>
        </div>
    <% end %>
    <div class="flex flex-col gap-2 mt-4">
        <% @server.channels.order(created_at: :desc).each do |channel| %>
            <%= link_to server_channel_path(@server, channel), data: { turbo_frame: :dashboard, action: "sidebar#toggle", sidebar_skip_prevent_param: true } do %>
                <div class="p-2 w-full bg-gray-500 rounded-lg hover:bg-gray-900 flex flex-row justify-start items-center"> 
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-gray-100">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 9.75a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375m-13.5 3.01c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.184-4.183a1.14 1.14 0 0 1 .778-.332 48.294 48.294 0 0 0 5.83-.498c1.585-.233 2.708-1.626 2.708-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
                    </svg>
                    <span class="text-lg text-gray-100 ml-2"> 
                        <%= channel.name %>
                    </span> 
                </div>
            <% end %>
        <% end %>
    </div>
</div>