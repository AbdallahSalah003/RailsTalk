<div class="w-full h-16 bg-gray-900 flex justify-center fixed top-0">
    <div class="max-w-5xl w-full flex items-center justify-between">
        <%= link_to "Home", root_path, class:"text-xl text-gray-100" %>
        <% if current_user %>
            <div class="flex items-center gap-4">
                <span class="text-xl text-gray-100">
                    <%= current_user.username %>#<%= current_user.user_numbers %>
                </span>
                <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete, confirm: "Are you sure?" }, 
                    class:"text-lg text-gray-100 bg-gray-500 px-3 py-2 rounded-lg" if current_user %>
            </div>
        <% end %>
    </div> 
</div>